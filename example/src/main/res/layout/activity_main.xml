<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context=".MainActivity">

    <Button
            android:id="@+id/activity_main_navigation_view_test_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Navigation View Test"
            />
    <Button
            android:id="@+id/activity_main_text_input_layout_test_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input layout Test"
            />

    <Button
            android:id="@+id/activity_main_snack_bar_test_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="snack bar Test"
            />
    <Button
            android:id="@+id/activity_main_tab_layout_test_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tab layout Test"
            />

    <Button
            android:id="@+id/activity_main_coordinator_layout_test_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="coordinator layout Test"
            />

    <Button
            android:id="@+id/activity_main_collapsing_tool_bar_test_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="collapsing tool bar Test"
            />




</LinearLayout>
